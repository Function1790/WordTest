<UserControl x:Class="WpfApp1.Line"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1"
             KeyDown="UserControl_KeyDown"
             mc:Ignorable="d" Height="50" Width="750" Foreground="White">
    <Grid Background="#00000000">
        <Rectangle Fill="#33ACACAC" HorizontalAlignment="Left" Height="1" Margin="1,47,0,0" VerticalAlignment="Top" Width="748"/>
        <TextBox BorderThickness="0,0,0,0" x:Name="Eng" HorizontalAlignment="Left" Height="29" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="370" FontFamily="/WordTest;component/Fonts/#LEMON MILK Light" FontSize="18" Foreground="White" BorderBrush="{x:Null}" SelectionBrush="#FFC3C3C3" CaretBrush="#FFF1F1F1" Background="#02FFFFFF"/>
        <TextBox BorderThickness="0,0,0,0" x:Name="Kor" HorizontalAlignment="Left" Height="29" Margin="390,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="350" FontFamily="/WordTest;component/Fonts/#LEMON MILK Light" FontSize="20" Foreground="White" Background="#02FFFFFF" BorderBrush="#0CABADB3" SelectionBrush="#FFC5C5C5" CaretBrush="#FFF1F1F1"/>

    </Grid>
</UserControl>
